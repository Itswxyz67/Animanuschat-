{
  "rules": {
    "waitingList": {
      ".read": true,
      "$userId": {
        ".write": true,
        ".validate": "newData.hasChildren(['userId', 'nickname', 'gender', 'genderPreference', 'timestamp'])",
        "userId": {
          ".validate": "newData.isString()"
        },
        "nickname": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "gender": {
          ".validate": "newData.isString() && (newData.val() === 'male' || newData.val() === 'female' || newData.val() === 'other')"
        },
        "genderPreference": {
          ".validate": "newData.isString() && (newData.val() === 'male' || newData.val() === 'female' || newData.val() === 'any')"
        },
        "tags": {
          ".validate": "newData.hasChildren()"
        },
        "nsfwEnabled": {
          ".validate": "newData.isBoolean()"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "rooms": {
      ".read": true,
      "$roomId": {
        ".validate": "newData.hasChildren(['users', 'createdAt'])",
        "users": {
          ".write": true,
          "$userId": {
            ".validate": "newData.hasChildren(['nickname', 'connected', 'joinedAt'])",
            "nickname": {
              ".validate": "newData.isString()"
            },
            "connected": {
              ".validate": "newData.isBoolean()"
            },
            "joinedAt": {
              ".validate": "newData.isNumber()"
            }
          }
        },
        "messages": {
          ".write": true,
          "$messageId": {
            ".validate": "newData.hasChildren(['senderId', 'senderNickname', 'timestamp', 'type']) && (newData.hasChild('text') || newData.hasChild('imageUrl'))",
            "senderId": {
              ".validate": "newData.isString()"
            },
            "senderNickname": {
              ".validate": "newData.isString()"
            },
            "text": {
              ".validate": "newData.isString()"
            },
            "imageUrl": {
              ".validate": "newData.isString()"
            },
            "timestamp": {
              ".validate": "newData.isNumber()"
            },
            "type": {
              ".validate": "newData.isString() && (newData.val() === 'text' || newData.val() === 'image')"
            }
          }
        },
        "typing": {
          ".write": true,
          "$userId": {
            ".validate": "newData.isBoolean()"
          }
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "nsfwEnabled": {
          ".validate": "newData.isBoolean()"
        }
      }
    }
  }
}
